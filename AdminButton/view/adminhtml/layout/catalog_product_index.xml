<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Backend\Block\Widget\Container" name="twentytoo_adminbutton_container">
                <button id="twentytoo_adminbutton_button" class="action-secondary">
                    <argument name="data" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Twentytoo</item>
                        <item name="class" xsi:type="string">primary</item>
                        <item name="onclick" xsi:type="string">setLocation(window.location.href + 'twentytoo_adminbutton/index/index')</item>
                    </argument>
                </button>
            </block>
        </referenceContainer>
    </body>
</page>